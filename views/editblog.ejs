<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/png" href="/logo.png">
    <%- include('./partials/head') %>
    <title>Edit Blog</title>
    <style>
      #imagePreview {
        max-height: 200px;
        object-fit: cover;
        margin-top: 10px;
        display: none;
        border-radius: 10px;
      }

      .form-control:invalid {
        border-color: #dc3545;
      }

      .form-control:valid {
        border-color: #198754;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container p-4">
      <h1 class="text-center mb-4">‚úèÔ∏è Edit Blog</h1>

      <form action="/dashboard/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data" novalidate>
        <!-- Cover Image -->
          <div class="mb-3">
          <label for="coverImageURL" class="form-label">Cover Image</label>
          <input
            type="file"
            name="coverImageURL"
            id="coverImageURL"
            class="form-control"
            accept="image/*"
          />
          <% if (blog.coverImageURL) { %>
            <img
              id="imagePreview"
              src="<%= blog.coverImageURL %>"
              alt="Current Cover Image"
              style="display: block;"
            />
          <% } else { %>
            <img id="imagePreview" alt="Image Preview" />
          <% } %>
        </div>
        <!-- Blog Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            class="form-control"
            value="<%= blog.title %>"
            required
            maxlength="150"
          />
        </div>

        <!-- Blog Content -->
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea
            name="content"
            id="content"
            class="form-control"
            rows="10"
            required
          ><%= blog.content %></textarea>
          <div class="form-text"><span id="wordCount">0</span> words</div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-success btn-lg">
            üíæ Save Changes
          </button>
        </div>
      </form>
    </div>

    <%- include('./partials/script') %>

    <script>
      // Word count and auto-resize textarea
      const textarea = document.getElementById('content');
      const wordCountDisplay = document.getElementById('wordCount');

      function updateWordCount() {
        const text = textarea.value.trim();
        const words = text.length ? text.split(/\s+/).length : 0;
        wordCountDisplay.innerText = words;
      }

      textarea.addEventListener('input', () => {
        textarea.style.height = 'auto';
        textarea.style.height = textarea.scrollHeight + 'px';
        updateWordCount();
      });

      // Initialize on load
      updateWordCount();
      textarea.style.height = textarea.scrollHeight + 'px';

      // Image preview live update
      const coverImageInput = document.getElementById('coverImage');
      const imagePreview = document.getElementById('imagePreview');

      coverImageInput.addEventListener('change', () => {
        const file = coverImageInput.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = e => {
            imagePreview.src = e.target.result;
            imagePreview.style.display = 'block';
          };
          reader.readAsDataURL(file);
        } else {
          imagePreview.src = '';
          imagePreview.style.display = 'none';
        }
      });
    </script>
  </body>
</html>
